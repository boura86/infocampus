{% extends 'base.html.twig' %}

{% block body %}
    <a class="btn btn-default" href="{{ path('niveau_new') }}">Creer un niveau</a>
    <hr>
    <h1 class="page-header">Liste des niveau</h1>

    <div class="table-responsive">

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for niveau in niveaus %}
                <tr>
                    <td><a href="{{ path('niveau_show', { 'id': niveau.id }) }}">{{ niveau.id }}</a></td>
                    <td>{{ niveau.nom }}</td>
                    <td>
                        <a class="btn btn-default" href="{{ path('niveau_show', { 'id': niveau.id }) }}">Details</a>
                        <a class="btn btn-success" href="{{ path('niveau_edit', { 'id': niveau.id }) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
